<%= render partial: 'status', locals: {user: current_user} %>
<table>
  <thead>
    <tr>
      <th><%= current_user.name %> choose users to follow</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <p><%= paginate @posts %></p>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td> <%= image_tag(post.user.pic) %> </td>
        <td><%= post.body %> Written by: <%= post.user.name %></td>
        <%= render partial: 'follow', locals: {post: post, user: current_user} %>
      <% end %>
    </tr>
  </tbody>
</table>
